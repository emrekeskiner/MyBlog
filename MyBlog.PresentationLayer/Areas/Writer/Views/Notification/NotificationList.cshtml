@model List<Notification>
@{
    ViewData["Title"] = "NotificationList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
    int count = 0;
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Bildirim Sayfası</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Bildirimler</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Tüm Bildirimler </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bildirim Listesi</h4>
                    <p class="card-description">
                        Yöneticiniz tarafından gönderilen tüm bildirimlere aşağıdan ulaşabilirsiniz.
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Tarih</th>
                                    <th>İşlem</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td><a href="/Writer/Notification/NotificationDetail/@item.NotificationId" class="btn btn-success">Detay</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

