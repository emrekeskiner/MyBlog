@model List<Notification>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count count-varient1">7</span>
    </a>
    <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimler</h6>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item" href="/Writer/Notification/NotificationDetail/@item.NotificationId">
            <div class="preview-item-content flex-grow">
                <span class="badge badge-pill badge-success">Yeni</span>
                <p class="text-small text-muted ellipsis mb-0"> @item.Title </p>
            </div>
            <p class="text-small text-muted align-self-start"> @item.CreatedDate.ToString("dd.MM.yyyy") </p>
        </a> 
        }
        
        <div class="dropdown-divider"></div>
        <p class="p-3 mb-0">
            <a href="/Writer/Notification/NotificationList">Tüm Bildirimler</a>
        </p>
    </div>
</li>