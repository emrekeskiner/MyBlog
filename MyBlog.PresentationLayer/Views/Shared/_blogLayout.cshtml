
<html lang="tr">

@await Component.InvokeAsync("_DefaultHeadComponentPartial")

<body>

    @await Component.InvokeAsync("_SidebarComponentPartial")
    @await Component.InvokeAsync("_NavbarComponentPartial")



    <!-- Header Section End -->
    <!-- Categories Section Begin -->
    <section class="categories categories-grid spad">
        <div class="categories__post">
            <div class="container">
                @RenderBody()
            </div>
            @await RenderSectionAsync("Scripts", required: false)
        </div>
    </section>
    <!-- Categories Section End -->
    <!-- Footer Section Begin -->
    <footer class="footer">
        @await Component.InvokeAsync("_ArticleImageComponentPartial")
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer__text">

                        <div class="footer__social">
                            @await Component.InvokeAsync("_SocialMediaFooterComponentPartial")
                        </div>
                    </div>
                    <div class="footer__copyright">
                        <p>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;<script>document.write(new Date().getFullYear());</script> Emre Keskiner
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Aranacak Kelime....">
            </form>
        </div>
    </div>
    <!-- Search End -->
    <!-- Js Plugins -->
    @await Component.InvokeAsync("_ScritpsFooterComponentPartial")
</body>

</html>