@model List<Article>
@{
    int count = 0;
}
<div class="sidebar__feature__item">
    <div class="sidebar__item__title">
        <h6>SOn 5 Gönderi</h6>
    </div>
    @foreach (var item in Model)
    {
        count++;

        if (count == 1)
        {
             <div class="sidebar__feature__item__large set-bg"
                 data-setbg="@item.ThumbImageUrl">
        <div class="sidebar__feature__item__large--text">
            <span>@item.Category.CategoryName</span>
            <h5>
                        <a href="/Blog/BlogDetail/@item.ArticleId">@item.Title</a>
            </h5>
        </div>
        </div> 
        }else{
    <div class="sidebar__feature__item__list">
        <div class="sidebar__feature__item__list__single">
            <div class="post__meta">
                <h4>@item.CreatedDate.Day</h4>
                <span>@item.CreatedDate.ToString("MMM")</span>
            </div>
            <div class="post__text">
                <span>Dinner</span>
                <h5><a href="#">@item.Title</a></h5>
            </div>
        </div>
    </div>
    }
   } 
   </div>
